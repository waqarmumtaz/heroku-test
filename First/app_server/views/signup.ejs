<div id="signup">
    <h3 class="text-center text-white pt-5">signup form</h3>
    <div class="container">
        <div id="signup-row" class="row justify-content-center align-items-center">
            <div id="signup-column" class="col-md-6">
                <div id="signup-box" class="col-md-12">
                    <form id="signup-form" class="form" action="/login/signup" method="post">
                        <h3 class="text-center text-info">Kayıt</h3>
                        <div class="form-group">
                            <label for="password" class="text-info">İsim:</label><br>
                            <input type="text" name="firstname" id="firstname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Soyisim:</label><br>
                            <input type="text" name="lastname" id="lastname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="username" class="text-info">Kullanıcı adı:</label><br>
                            <input type="text" name="username" id="userame" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Şifre:</label><br>
                            <input type="text" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-md" value="Kayıt">
                        </div>

                    </form>
                </div>
                <% if (typeof username!="undefined") { %>
                <h3><%= username %> </h3>
                <% } %>
                <% if (typeof password!="undefined") { %>
                <h3><%= password %> </h3>
                <% } %>
            </div>
        </div>
    </div>
</div>